{
  "name": "amazon-ivs-broadcast-react-native",
  "version": "1.1.3",
  "description": "Amazon IVS Broadcast için React Native kapsayıcı modül (iOS 14+ ve Android 9.0+). Kamera, mikrofon, yayın yönetimi, gelişmiş IVS özellikleri.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/abdurrahman-dev/amazon-ivs-broadcast-react-native.git"
  },
  "author": "abdurrahman-dev",
  "license": "MIT",
  "keywords": [
    "react-native",
    "amazon",
    "ivs",
    "broadcast",
    "live-streaming",
    "video",
    "native-module",
    "camera",
    "microphone"
  ],
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "ios/",
    "android/",
    "amazon-ivs-broadcast-react-native.podspec"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "prepare": "bob build",
    "test": "jest"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.71.0"
  },
  "devDependencies": {
    "@react-native-community/bob": "^0.17.1",
    "@tsconfig/react-native": "^3.0.6",
    "@types/react-native": "^0.72.8",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
